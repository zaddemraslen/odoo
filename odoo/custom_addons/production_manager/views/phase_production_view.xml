<odoo>
<record id="view_phase_list" model="ir.ui.view">
    <field name="name">production.manager.phase.list</field>
    <field name="model">production.manager.phase</field>
    <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="duree"/>
            <field name="responsable"/>
            <field name="create_date"/>
            <field name="write_date"/>
        </list>
    </field>
</record>

<record id="view_phase_form" model="ir.ui.view">
    <field name="name">production.manager.phase.form</field>
    <field name="model">production.manager.phase</field>
    <field name="arch" type="xml">
        <form string="Phase de Production">
            <group>
                <field name="name"/>
                <field name="duree"/>
                <field name="responsable"/>
            </group>
        </form>
    </field>
</record>

<record id="action_phase" model="ir.actions.act_window">
    <field name="name">Phases de Production</field>
    <field name="res_model">production.manager.phase</field>
    <field name="view_mode">list,form</field>
</record>

<menuitem id="menu_phase"
          name="Phases de Production"
          parent="menu_production_root"
          action="action_phase"/>
</odoo>