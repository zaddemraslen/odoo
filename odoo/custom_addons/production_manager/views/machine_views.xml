<odoo>
    <record id="view_machine_form" model="ir.ui.view">
        <field name="name">production.manager.machine.form</field>
        <field name="model">production.manager.machine</field>
        <field name="arch" type="xml">
            <form string="Machine">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type_id"/>
                        <field name="last_maintenance_date"/>
                        <field name="next_maintenance_date"/>
                        <field name="status"/>
                        <field name="create_date" readonly="1"/>
                        <field name="write_date" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_machine_list" model="ir.ui.view">
        <field name="name">production.manager.machine.list</field>
        <field name="model">production.manager.machine</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="type_id"/>
                <field name="last_maintenance_date"/>
                <field name="next_maintenance_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="action_machine" model="ir.actions.act_window">
        <field name="name">Machines</field>
        <field name="res_model">production.manager.machine</field>
        <field name="view_mode">list,form,graph</field>
    </record>

    <menuitem id="menu_machine" name="Machines"
              parent="menu_production_root"
              action="action_machine"/>
</odoo>
