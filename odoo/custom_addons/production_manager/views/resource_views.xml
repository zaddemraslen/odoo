<odoo>
    <record id="view_resource_list" model="ir.ui.view">
        <field name="name">production.manager.resource.list</field>
        <field name="model">production.manager.resource</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="type_id"/>
                <field name="stock"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </list>
        </field>
    </record>

    <record id="view_resource_form" model="ir.ui.view">
        <field name="name">production.manager.resource.form</field>
        <field name="model">production.manager.resource</field>
        <field name="arch" type="xml">
            <form string="Resource">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type_id"/>
                        <field name="stock"/>
                        <field name="create_date" readonly="1"/>
                        <field name="write_date" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_resource" model="ir.actions.act_window">
        <field name="name">Resources</field>
        <field name="res_model">production.manager.resource</field>
        <field name="view_mode">list,form,graph</field>  
    </record>


    <menuitem id="menu_resource" name="Resources"
              parent="menu_production_root"
              action="action_resource"/>

</odoo>
