<odoo>
    <record id="view_resource_type_list" model="ir.ui.view">
        <field name="name">production.manager.resource.type.list</field>
        <field name="model">production.manager.resource.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </list>
        </field>
    </record>

    <record id="view_resource_type_form" model="ir.ui.view">
        <field name="name">production.manager.resource.type.form</field>
        <field name="model">production.manager.resource.type</field>
        <field name="arch" type="xml">
            <form string="Resource Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="create_date" readonly="1"/>
                        <field name="write_date" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_resource_type" model="ir.actions.act_window">
        <field name="name">Resource Types</field>
        <field name="res_model">production.manager.resource.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_resource_type" name="Resource Types"
              parent="menu_production_root"
              action="action_resource_type"/>
</odoo>
