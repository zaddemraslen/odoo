<odoo>
<record id="view_equipe_list" model="ir.ui.view">
    <field name="name">production.manager.equipe.list</field>
    <field name="model">production.manager.equipe</field>
    <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="chef_equipe"/>
            <field name="effectif"/>
            <field name="heures_travaillees"/>
            <field name="disponibilite"/>
        </list>
    </field>
</record>

<record id="view_equipe_form" model="ir.ui.view">
    <field name="name">production.manager.equipe.form</field>
    <field name="model">production.manager.equipe</field>
    <field name="arch" type="xml">
        <form string="Équipe de Production">
            <group>
                <field name="name"/>
                <field name="chef_equipe"/>
                <field name="effectif"/>
                <field name="heures_travaillees"/>
                <field name="disponibilite"/>
            </group>
        </form>
    </field>
</record>

<record id="action_equipe" model="ir.actions.act_window">
    <field name="name">Équipes</field>
    <field name="res_model">production.manager.equipe</field>
    <field name="view_mode">list,form</field>
</record>

<menuitem id="menu_equipe"
          name="Équipes"
          parent="menu_production_root"
          action="action_equipe"/>
</odoo>