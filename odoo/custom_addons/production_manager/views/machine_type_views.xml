<odoo>
    <record id="view_machine_type_list" model="ir.ui.view">
        <field name="name">production.manager.machine.type.list</field>
        <field name="model">production.manager.machine.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </list>
        </field>
    </record>

    <record id="view_machine_type_form" model="ir.ui.view">
        <field name="name">production.manager.machine.type.form</field>
        <field name="model">production.manager.machine.type</field>
        <field name="arch" type="xml">
            <form string="Type de Machine">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="create_date" readonly="1"/>
                        <field name="write_date" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_machine_type" model="ir.actions.act_window">
        <field name="name">Types de Machines</field>
        <field name="res_model">production.manager.machine.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_machine_type" name="Types de Machines"
              parent="menu_production_root"
              action="action_machine_type"/>
</odoo>
