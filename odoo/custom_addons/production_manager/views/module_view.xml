<odoo>
    <record id="view_production_list" model="ir.ui.view">
        <field name="name">production.manager.production.list</field>
        <field name="model">production.manager.production</field>
        <field name="arch" type="xml">
            <list string="Productions">
                <field name="produit"/>
                <field name="quantite"/>
                <field name="statut"/>
                <field name="date_production"/>
                <field name="commande_id"/>
                <field name="prix_unitaire"/>
                <field name="cout_production"/>
                <field name="temps_production"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </list>
        </field>
    </record>

    <record id="view_production_form" model="ir.ui.view">
        <field name="name">production.manager.production.form</field>
        <field name="model">production.manager.production</field>
        <field name="arch" type="xml">
            <form string="Production">
                <group>
                    <field name="commande_id"/>
                    <field name="produit"/>
                    <field name="quantite"/>
                    <field name="statut"/>
                    <field name="date_production"/>
                    <field name="prix_unitaire"/>
                    <field name="cout_production"/>
                    <field name="temps_production"/>
                </group>
                <notebook>
                    <page string="Dates">
                        <field name="create_date"/>
                        <field name="write_date"/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="action_production" model="ir.actions.act_window">
        <field name="name">Productions</field>
        <field name="res_model">production.manager.production</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_production_root" name="Production Manager"/>
    <menuitem id="menu_production" name="Productions" parent="menu_production_root" action="action_production"/>
</odoo>
